@inherits LoginBase
@page "/Login"

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card" style="width: 100%;">
                <div class="card-header">
                    <h3 class="text-center">Please login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ErrorMessage
                        </div>
                    }
                    <EditForm Model="UserModel" OnValidSubmit="HandleValidSubmit" FormName="SignIn">
                        <div class="form-group mb-3">
                            <label for="username">Username</label>
                            <InputText id="username" class="form-control" @bind-Value="UserModel.Username" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Password</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="UserModel.Password" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>