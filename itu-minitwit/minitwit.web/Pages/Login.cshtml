@page
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "Shared/_Layout";
}

<h2>Sign In</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error"><strong>Error:</strong> @Model.ErrorMessage</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <dl>
        <dt>Username:</dt>
        <dd><input type="text" name="Username" value="@Model.Username" size="30"></dd>
        <dt>Password:</dt>
        <dd><input type="password" name="Password" size="30"></dd>
    </dl>
    <div class="actions"><input type="submit" value="Sign In"></div>
</form>
